<p style="color: green"><%= notice %></p>

<h1 class="inventories_header">List of Inventories</h1>

<div id="inventories">
  <% @inventories.each do |inventory| %>
    <div id="inventory">
    <%= render inventory %>
    <p class="show_inventory">
      <%= link_to "Show this inventory", inventory, class: "action" %>
    </p>
  </div>
  <% end %>
</div>
<div class="new_inventory">
  <%= link_to "New inventory", new_inventory_path%>
</div>

