<div class=recipe-card>
  <div class="recipe-container" id="<%= dom_id recipe %>">
    <p class="recipe-name">
      <strong>Name:</strong>
      <%= recipe.name %>
    </p>
    <div class="recipe-flex">
      <p>
        <strong>Prep time:</strong>
        <%= recipe.prep_time %>
      </p>

      <p>
        <strong>Cooking time:</strong>
        <%= recipe.cooking_time %>
      </p>

    </div>
    <div class="recipe-flex">
      <p>
        <strong>Description:</strong>
        <%= recipe.description %>
      </p>

      <p>
        <strong>Public:</strong>
        <%= recipe.public %>
      </p>  
      <p>
        <%= link_to "Show this recipe", recipe %>
      </p>
    </div>  
  </div>

</div>