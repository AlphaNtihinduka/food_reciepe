<div class="shopping_list">
    <h3>Shopping List</h3>
    <div>
      <p>
        <span>Amount of food items to buy: </span>
        <span>&nbsp;<%= InventoryFood.count %></span>
      </p>

      <p>
        <span>Total value of food needed:</span>
        <span>&nbsp;<%= @total %></span>
      </p>

      <p>
        <span>Recipe: </span>
        <span>&nbsp;<%= Recipe.find(params[:recipe_id]).name %></span>
      </p>

      <p>
        <span>Inventor:</span>
        <span>&nbsp;<%= Inventory.find(params[:inventory_id]).name %></span>
      </p>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <% missing_food = RecipeFood.where(recipe_id: params[:recipe_id]).joins(:food).where(food_id: food.id).sum('quantity') - InventoryFood.where(inventory_id: params[:inventory_id]).joins(:food).where(food_id: food.id).sum('quantity') %>
          <% if missing_food > 0 %>
            <tr>
              <td><%= food.name %></td>
              <td><%= missing_food %></td>
              <td>$<%= missing_food * food.price %></td>
              <td><%= button_to "Delete", food_path(food.id), data: {turbo_method: :delete, turbo_confirm: 'are you sure'}, method: :delete %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>